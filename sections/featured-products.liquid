<section class="featured-products py-10 overflow-hidden">
  <div class="container mx-auto sm:px-0 lg:px-8">

    {% if section.settings.heading != blank %}
      <h2 class="text-[80px] font-normal leading-80 tracking-normal text-center pb-14">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="featured-product__items {% unless section.blocks.size > 3 %} grid gap-[1px] sm:grid-cols-2 md:grid-cols-3 {% endunless %}">
      {% render 'featured-product-item' for section.blocks as block %}
    </div><!-- featured-product__items -->

  </div>
</section>


{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "placeholder": "Section heading"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link Label"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Featured Products",
      "name":"Featured Products"
    }
  ]
}
{% endschema %}