{%- capture background -%}
	{%- if block.settings.bg_type == 'contain' -%}
		background-color: {{ block.settings.bg_color }}
	{%- elsif block.settings.bg_type == 'covered' -%}
		background-image: url({{ block.settings.bg_image | img_url: 'master'}})
	{%- endif -%}
{%- endcapture -%}


{%- comment -%} Title font size {%- endcomment -%}
{%- capture title_size -%}
	{% if block.settings.padding == 'sm' %}
    text-[16px]
  {% elsif block.settings.title_size == 'md' %}
    text-[18px] sm:text-[24px] lg:text-[32px]
    {% elsif block.settings.title_size == 'lg' %}
    text-[24px]  sm:text-32px] lg:text-[64px]
  {% endif %}
{%- endcapture -%}


{%- comment -%} Card content color {%- endcomment -%}
{%- capture text_color -%}
	{% if block.settings.text_colour == 'light' %} text-white {% else %} text-black {% endif %}
{%- endcapture -%}


{%- comment -%} Card item padding {%- endcomment -%}
{%- capture padding -%}
	{% if block.settings.padding == 'tight' %} p-[10px] pb-16 {% else %} p-10 pb-16 {% endif %}
{%- endcapture -%}

 
<div class="bg-no-repeat bg-center bg-cover {{- padding -}} 
	 {%- if block.settings.bg_type == 'covered' -%} pt-[70%] flex items-end {%- endif -%}" 
	 style="{{ background }}">

	{%- if block.settings.bg_type == 'contain' -%}
		<div class="card-image block bg-no-repeat bg-center bg-cover mb-[30px] pb-[72%] w-full" style="background-image: url({{ block.settings.bg_image | img_url: 'master'}})"></div>
	{%- endif -%}

	<div class="card-content text-center max-w-[615px] mx-auto {{ text_color }}">
		{%- if block.settings.title != blank -%}
			<h3 class="font-GT mb-[10px] {{ text_color }} {{ title_size }} ">{{ block.settings.title }}</h3>
		{%- endif -%}

		{%- if block.settings.content != blank -%}
			<div class="font-GT text-[14px] leading-[18px] mb-[16px]">{{ block.settings.content }}</div>
		{%- endif -%}

		{%- if block.settings.link_url != blank and block.settings.link_label != blank -%}
			<a href="{{ block.settings.link_url }}" class="font-Platform underline uppercase text-[12px] tracking-[0.25em]">
				{{ block.settings.link_label }}
			</a>
		{%- endif -%}
	</div>

</div>