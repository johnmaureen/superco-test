{%- capture background -%}
	{%- if block.settings.bg_type == 'contain' -%}
		background-color: {{ block.settings.bg_color }}
	{%- elsif block.settings.bg_type == 'covered' -%}
		background-image: url({{ block.settings.bg_image | img_url: 'master'}})
	{%- endif -%}
{%- endcapture -%}


<div class="p-[10px] bg-no-repeat bg-center bg-cover" style="{{ background }}">

	{%- if block.settings.bg_type == 'contain' -%}
		<div class="card-image block bg-no-repeat bg-center bg-cover mb-[30px] pb-[72%] w-full" style="background-image: url({{ block.settings.bg_image | img_url: 'master'}})"></div>
	{%- endif -%}

	<div class="card-content text-center">
		{%- if block.settings.title != blank -%}
			<h3 class="text-[32px] mb-[10px]">{{ block.settings.title }}</h3>
		{%- endif -%}

		{%- if block.settings.content != blank -%}
			<div class="text-[14px] leading-[18px] mb-[16px]">{{ block.settings.content }}</div>
		{%- endif -%}

		{%- if block.settings.link_url != blank and block.settings.link_label != blank -%}
			<a href="{{ block.settings.link_url }}" class="underline uppercase text-[12px] tracking-[0.25em]">
				{{ block.settings.link_label }}
			</a>
		{%- endif -%}
	</div>

</div>